<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/forecast_item_background"
    android:paddingHorizontal="16dp">

    <!-- 主布局区域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forecast_main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/forecast_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 时间与温度水平排列 -->
        <TextView
            android:id="@+id/forecast_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textColor="@color/text_primary_color"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/forecast_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.0°C / 20.0°C"
            android:textColor="@color/text_primary_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/forecast_time"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 天气图标 -->
    <ImageView
        android:id="@+id/forecast_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_weather_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 天气描述 -->
    <TextView
        android:id="@+id/forecast_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="晴朗"
        android:textColor="@color/text_secondary_color"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/forecast_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forecast_main_content" />

    <!-- 温度进度条 - 自定义控件 -->
    <com.example.weatherapp.view.TemperatureProgressBar
        android:id="@+id/temperature_progress"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:backgroundColor="@color/cold_color"
        app:endColor="@color/hot_color"
        app:max="100"
        app:progress="50"
        app:startColor="@color/cool_color_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecast_description" />

    <!-- 最小/最大温度指示器 -->
    <TextView
        android:id="@+id/min_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最低"
        android:textColor="@color/cold_color"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature_progress" />

    <TextView
        android:id="@+id/max_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高"
        android:textColor="@color/hot_color"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature_progress" />
</androidx.constraintlayout.widget.ConstraintLayout>